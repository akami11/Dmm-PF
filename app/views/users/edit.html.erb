<%= form_with model: @user, local:true do |f| %>


  <div class="form-group row">
    <%= f.label :user_name, '名前', class:"col-sm-2 offset-sm-1 col-form-label"%>
    <div class="col-sm-6">
      <%= f.text_field :user_name, placeholder: "田中太郎", class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group row">
    <%= f.label :profile_image, 'プロフィール画像', class:"col-sm-2 offset-sm-1 col-form-label"%>
    <div class="col-sm-6">
      <%= f.attachment_field :profile_image %>
    </div>
  </div>
  
  <div class="form-group row">
    <%= f.label :email, 'メールアドレス', class:"col-sm-2 offset-sm-1 col-form-label"%>
    <div class="col-sm-6">
      <%= f.text_field :email, placeholder: "email", class: "form-control" %>
    </div>
  </div>

  <%= f.submit '編集する', class: "btn btn-success" %>
<% end %>

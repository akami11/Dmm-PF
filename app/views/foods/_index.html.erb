<%= link_to new_food_path, method: :get do%>
  <i class="far fa-plus-square food__icon"></i>
<% end %>
<div class="form-group">
  <%= form_with url: sort_path, method: :get, local: true do |f| %>
    <%= f.select :nutrition, options_for_select({ "熱量" => "熱量", "タンパク質" => "タンパク質"}),class: "form-control" %>
    <%= f.select :updown, options_for_select({ "高い順" => "高い順", "低い順" => "低い順"}), class: "form-control" %>
    <%= f.button :type => 'submit', class: 'btn btn-default' do%>
     <i class="fas fa-sort"></i>
    <% end %>
  <% end %>
</div>
<div class="row d-flex justify-content-center">
  <% foods.each do |food| %>
    <div class="col-lg-3 col-md-4 col-sm-4 col-6 hover-animate">
      <div class="card mb-3">
        <%= link_to food_path(food.id), method: :get do %>
          <%= attachment_image_tag food, :food_image, :fill, 150, 100, format: 'jpeg',class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= food.food_name %></h5>
          <div class="card-text">
            <div class="food__text">
              <div class="">熱量</div>
              <div><%= food.calorie %>kcal</div>
            </div>
            <div class="food__text">
              <div>蛋白質</div>
              <div><%= food.protein %>g</div>
            </div>
            <div class="food__text">
              <div>割合</div>
              <div><%= food.ratio %>mg/kca</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<%= paginate foods %>


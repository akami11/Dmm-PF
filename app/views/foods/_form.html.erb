
<%= form_with model: food, local:true do |f| %>
<%= render 'layouts/error_messages', model: f.object %>
  <div class = "row form-group">
    <div class ="col-md-6">

      <h5>食材名</h5>
      <%= f.text_field :food_name, class: "form-control", :required => true %>

      <h5>食材画像</h5>
      <%= f.attachment_field :food_image %>
    </div>
    
    <div class ="col-md-6">
      <div class="form-group row">
        <label class="col-4 col-form-label">熱量</label>
        <%= f.text_field :calorie, class: "form-control col-7", :required => true %>
        <div class="col-1 col-form-label">kcal</div>
      </div>
      
      <div class="form-group row">
        <label class="col-4 col-form-label">タンパク質</label>
        <%= f.text_field :protein, class: "form-control col-7", :required => true %>
        <div class="col-1 col-form-label">g</div>
      </div>
      
      <div class="form-group row">
        <label class="col-4 col-form-label">脂質</label>
        <%= f.text_field :fat, class: "form-control col-7" %>
        <div class="col-1 col-form-label">g</div>
      </div>

      <div class="form-group row">
        <label class="col-4 col-form-label">炭水化物</label>
        <%= f.text_field :carbohydrate, class: "form-control col-7" %>
        <div class="col-1 col-form-label">g</div>
      </div>

      <div class="form-group row">
        <label class="col-4 col-form-label">食塩相当量</label>
        <%= f.text_field :salt_equivalent, class: "form-control col-7" %>
        <div class="col-1 col-form-label">g</div>
      </div>    
    
      <div class="form-group row">
        <label class="col-4 col-form-label">カテゴリ</label>
        <%= f.collection_select :category_id, categories, :id, :category_name, { prompt: "選択してください"}, class: "form-control col-7", :required => true%>
        <%= link_to "カテゴリー追加 ", categories_path, method: :get%>
      </div>
      
    </div>
  </div>
  <div class = "row">
    <div class ="col text-center">
      <h5>その他の成分</h5>
      <%= f.text_area :other_nutrition, class: "form-control mb-3",rows: 4 %>
      <%= f.submit '投稿', class: "btn btn-secondary w-25 mb-2" %>
    </div>
  </div>
  
<% end %>
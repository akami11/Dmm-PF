<%= render "tips/tips", tip: @tip %>

<div class="row">
  <div class="col-md-6 mb-3">
    <h4><%= @food.food_name %></h4>

    <%= attachment_image_tag @food, :food_image, :fill, 300, 225, format: 'jpeg', fallback: "no_image.jpg", size: "300x225" %><br>
  </div>
  <div class="col-md-6">
    <table class="table">
        <tr>
          <td>熱量</td>
          <td><%= @food.calorie %>kcal</td>
        </tr>
        <tr>
          <td>タンパク質</td>
          <td><%= @food.protein %>g</td>
        </tr>
        <tr>
          <td>脂質</td>
          <td><%= @food.fat %>g</td>
        </tr>
        <tr>
          <td>炭水化物</td>
          <td><%= @food.carbohydrate %>g</td>
        </tr>
        <tr>
          <td>食塩相当量</td>
          <td><%= @food.salt_equivalent %>g</td>
        </tr>
        <tr>
          <td>カテゴリー</td>
          <td><%= @food.category.category_name %></td>
        </tr>
        <tr>
          <td>タンパク質比率</td>
          <td><%= @food.ratio %>g/kcal</td>
        </tr>
    </table>
  </div>
</div>
<div class="row">
  <div class="col">
    <h5>その他の成分</h5>
    <text_area class="form-control mb-3"><%= @food.other_nutrition %></text_area>
    <div class="col text-center">
      <%= link_to "編集", edit_food_path(@food.id),method: :get, class: "btn btn-secondary w-25 mb-2" %>
      <%= link_to "削除", food_path(@food.id),method: :delete, class: "btn btn-secondary w-25 mb-2" %>
    </div>
  </div>
</div>




<% @ingredients.each do |i| %>

 <%= i.recipe.recipe_name %>

<% end %>